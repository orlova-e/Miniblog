                <div id="optionsContent" class="options-content">

                    <!-- * General -->
                    <form method="post" asp-action="Main" asp-controller="Options" class="usual-form">

                        <fieldset>
                            <legend>Title</legend>
                            <label class="usual-label" for="">Site name</label>
                            <input required type="text" class="usual-input usual-input-text">
                            <span class="text-sans-style"></span>

                            <label class="usual-label" for="">Subtitle</label>
                            <input type="text" class="usual-input usual-input-text">
                            <span class="text-sans-style"></span>
                        </fieldset>

                        <fieldset>
                            <legend>Icon</legend>
                            <label class="usual-label">
                                <input type="file" name="file">
                            </label>
                        </fieldset>

                        <fieldset>
                            <legend>Date format</legend>
                            <label class="usual-label radio-label" for="date1">
                                <input type="radio" id="date1" name="dateFormat" class="usual-radiobutton">
                                23.08.2020
                            </label>
                            <label class="usual-label radio-label" for="date2">
                                <input type="radio" id="date2" name="dateFormat" class="usual-radiobutton">
                                23/08/2020
                            </label>
                            <label class="usual-label radio-label" for="date4">
                                <input type="radio" id="date4" name="dateFormat" class="usual-radiobutton">
                                08/23/2020
                            </label>
